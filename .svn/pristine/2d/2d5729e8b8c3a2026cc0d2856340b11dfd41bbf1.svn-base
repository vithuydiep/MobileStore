*{
    box-sizing: border-box;
}   

body
{
    font-family:'system-ui', Times, serif;
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow: hidden;
    margin: 0;
    overflow: scroll;
}
.header{
    background-color: #EEEEEE;
    margin: 64px ;
}
.header .container
{
    display: flex;
    padding-top: 30px;
    padding-bottom: 64px;
    flex-direction: row;
    justify-content: space-between;
    margin: 30px 64px 30px 64px;
    position: relative;
}

.header .container .header-title{
    display: flex;
    flex-direction: column;
    font-size: 30px;
    font-weight: 400;
    color: #333333;
    margin-bottom: 0px;
}
.header .header-title .title{
    margin: 0;
    padding: 0;
    margin-top: 20px;
    font-weight: 400;
}
.header .container .log-out{
    position: absolute;
    right: 0;
    top: 50px;
}
.header .container .log-out button{
    border-radius: 5px;
    border: 1px solid #DDDDDD;
    padding: 10px 10px 10px 10px;
    outline: none;
    margin-bottom: 10px;
    background-color: #fff;
    color: black;
    cursor: pointer;
    
}
.header .container .log-out i{
    margin-right: 10px;
    transform: scaleX(-1);
}


.container
{
    margin: 0px 80px 20px 120px;
    display: flex;
    flex-wrap: wrap;
}
.container .card
{
    width: 380px;
    margin-right: 30px;
    margin-bottom: 30px;
    border: 1px solid #DDDDDD;   
}
.container .card .content
{
    margin: 20px 20px 10px 20px;  
}
.container .card .card-title
{
     font-size: 30px;
     height: 90px;
     margin-bottom: 10px;
     overflow: hiidden;
     text-overflow: ellipsis;
}
.container .card .card-img
{
     width: 100%;
     height: 300px;
     margin-bottom: 10px;
     object-fit: cover;
}
.container .card .card-content,
.container .card .card-unit,
.container .card .card-price
{
    margin-bottom: 20px;
}

.container .card .card-button
{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 30px;
}
.container .card .card-button a button,
.container .card .card-button .order
{
    border-radius: 5px;
    border: none;
    padding: 10px 20px 10px 20px;
    background-color: #428BCA;
    color: #fff;
    cursor: pointer;
}
.container .card .card-button a button:first-child
{
    padding-left: 30px;
    padding-right: 30px;
}
.container .card .card-button .order
{
   background-color: #F0AD4E;
   cursor: pointer;
}
.container .card .card-button button i
{
    margin-right: 10px;
}